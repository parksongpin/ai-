<body>
    <div class="container">
        <!-- 상단 네비게이션 바 -->
        <div class="top-nav">
            <div class="user-info">
                <div class="level-badge">
                    <i class="fas fa-star"></i>
                    Level {{ user_data.level }}
                    <div class="progress-container">
                        <div class="progress-bar"></div>
                    </div>
                </div>
                <div class="coin-display">
                    <i class="fas fa-coins"></i>
                    <span id="coin-amount">{{ user_data.coins }}</span>
                </div>
            </div>
            <a href="{{ url_for('index') }}" class="btn btn-secondary">
                <i class="fas fa-sign-out-alt"></i> 로그아웃
            </a>
        </div>

        <h1>🎵 Music Mood Premium</h1>
        <div class="welcome-message">
            <span style="font-size: 1.2em;">👋 {{ user_id }}님, 환영합니다!</span><br>
            프리미엄 음악 추천 서비스를 경험해보세요
        </div>

        <!-- 데일리 체크인 섹션 -->
        <div class="daily-check">
            <h3><i class="fas fa-calendar-check"></i> 데일리 체크인</h3>
            <p>매일 출석하고 50코인과 20경험치를 받으세요!</p>
            <button id="checkInBtn" class="check-btn" {{ 'disabled' if user_data.daily_check else '' }}>
                {{ '이미 완료!' if user_data.daily_check else '출석체크하기' }}
            </button>
        </div>

        <!-- 특별 이벤트 섹션 -->
        <div class="events-section">
            <div class="event-card">
                <i class="fas fa-gift feature-icon"></i>
                <h3>프리미엄 추천</h3>
                <p>100코인으로 AI가 더 정확한 음악을 추천해드립니다!</p>
                <button class="btn btn-primary" onclick="usePremiumService()">
                    <i class="fas fa-crown"></i> 프리미엄 이용하기
                </button>
            </div>
            <div class="event-card">
                <i class="fas fa-music feature-icon"></i>
                <h3>플레이리스트 생성</h3>
                <p>50코인으로 나만의 플레이리스트를 만들어보세요!</p>
                <button class="btn btn-primary" onclick="createPlaylist()">
                    <i class="fas fa-list"></i> 플레이리스트 만들기
                </button>
            </div>
        </div>

        <!-- 기본 기능 섹션 -->
        <div class="features">
            <div class="feature-card">
                <i class="fas fa-magic feature-icon"></i>
                <h3>기본 추천</h3>
                <p>무료로 당신의 기분에 맞는 음악을 추천받으세요</p>
                <a href="{{ url_for('survey') }}" class="btn btn-primary">
                    <i class="fas fa-music"></i> 추천 받기
                </a>
            </div>
            <div class="feature-card">
                <i class="fas fa-history feature-icon"></i>
                <h3>추천 기록</h3>
                <p>이전에 추천받은 곡들을 다시 들어보세요</p>
                <a href="{{ url_for('records') }}" class="btn btn-history">
                    <i class="fas fa-list"></i> 기록 보기
                </a>
            </div>
            <div class="feature-card">
                <i class="fas fa-chart-line feature-icon"></i>
                <h3>통계 분석</h3>
                <p>나의 음악 취향을 분석해보세요</p>
                <button class="btn btn-secondary" onclick="showStats()">
                    <i class="fas fa-chart-bar"></i> 통계 보기
                </button>
            </div>
        </div>
    </div>

    <!-- 모달 -->
    <div id="statsModal" class="modal">
        <div class="modal-content">
            <span class="close-modal">&times;</span>
            <h2>음악 취향 분석</h2>
            <div id="statsContent">
                <!-- 통계 내용이 여기에 동적으로 추가됩니다 -->
            </div>
        </div>
    </div>

    <!-- 토스트 메시지 -->
    <div class="toast" id="toast"></div>

    <!-- JavaScript -->
    <script>
        // 데일리 체크인
        document.getElementById('checkInBtn').addEventListener('click', async function() {
            const response = await fetch('/daily_check', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: `user_id={{ user_id }}`
            });
            
            const data = await response.json();
            if (data.success) {
                showToast('🎉 출석 체크 완료! +50 코인, +20 경험치');
                updateUserInfo(data);
                this.disabled = true;
                this.textContent = '이미 완료!';
            } else {
                showToast(data.message);
            }
        });

        // 프리미엄 서비스 이용
        async function usePremiumService() {
            const response = await fetch('/update_coins', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: `user_id={{ user_id }}&amount=-100`
            });
            
            const data = await response.json();
            if (data.success) {
                showToast('프리미엄 추천 서비스를 이용합니다!');
                document.getElementById('coin-amount').textContent = data.coins;
                window.location.href = "{{ url_for('survey') }}?premium=true";
            } else {
                showToast('코인이 부족합니다 😢');
            }
        }

        // 플레이리스트 생성
        async function createPlaylist() {
            const response = await fetch('/update_coins', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: `user_id={{ user_id }}&amount=-50`
            });
            
            const data = await response.json();
            if (data.success) {
                showToast('플레이리스트 생성을 시작합니다!');
                document.getElementById('coin-amount').textContent = data.coins;
                // 플레이리스트 생성 페이지로 이동
            } else {
                showToast('코인이 부족합니다 😢');
            }
        }

        // 통계 모달
        function showStats() {
            const modal = document.getElementById('statsModal');
            const statsContent = document.getElementById('statsContent');
            
            // 예시 통계 데이터
            statsContent.innerHTML = `
                <div style="margin: 20px 0;">
                    <h3>선호 장르</h3>
                    <div style="background: #f0f0f0; padding: 10px; border-radius: 10px;">
                        <p>🎵 Pop: 45%</p>
                        <p>🎸 Rock: 30%</p>
                        <p>🎹 Classical: 15%</p>
                        <p>🎧 Electronic: 10%</p>
                    </div>
                </div>
            `;
            
            modal.style.display = 'flex';
        }

        // 모달 닫기
        document.querySelector('.close-modal').addEventListener('click', function() {
            document.getElementById('statsModal').style.display = 'none';
        });

        // 토스트 메시지 표시
        function showToast(message) {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.style.display = 'block';
            
            setTimeout(() => {
                toast.style.display = 'none';
            }, 3000);
        }

        // 사용자 정보 업데이트
        function updateUserInfo(data) {
            document.getElementById('coin-amount').textContent = data.coins;
            const progressBar = document.querySelector('.progress-bar');
            progressBar.style.width = `${(data.exp / (data.level * 100)) * 100}%`;
            document.querySelector('.level-badge').innerHTML = `
                <i class="fas fa-star"></i>
                Level ${data.level}
                <div class="progress-container">
                    <div class="progress-bar" style="width: ${(data.exp / (data.level * 100)) * 100}%"></div>
                </div>
            `;
        }
    </script>
</body>
</html>